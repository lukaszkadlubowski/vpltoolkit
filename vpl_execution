#!/bin/bash

rm -f $0 # for security issue

### load environment
source vplmodel/vplmodel.sh
vplmodel_loadenv
vplmodel_checkenv

### download exo
# vpl_download $EXO

### run exo
BASEDIR="$HOME/GIT/$EXO"
[ ! -d "$BASEDIR" ] && echo "⚠ Directory \"$BASEDIR\" missing!" && exit 0
cd $BASEDIR
[ ! -f run.sh ] && echo "⚠ File \"run.sh\" missing!" && exit 0
./run.sh

# EOF
