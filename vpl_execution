#!/bin/bash

rm -f $0 # for security issue

### load environment
source vplmodel/bootstrap.sh
model_getenv

START=$(date +%s.%N)
model_clone $REPOSITORY
model_checkout $EXO
END=$(date +%s.%N)
echo $START
echo $END
DIFF=$(echo "$END - $START" | bc)
echo $DIFF

BASEDIR="$HOME/GIT/$EXO"
# echo "BASEDIR=$BASEDIR"

# ### run
[ ! -d "$BASEDIR" ] && echo "⚠ Directory \"$BASEDIR\" missing!" && exit 0
cd $BASEDIR
[ ! -f run.sh ] && echo "⚠ File \"run.sh\" missing!" && exit 0
./run.sh

# EOF
