#!/bin/bash

# echo "VPL_EXECUTION in $PWD"

if [ -f ./env.sh ] ; then 
    source ./env.sh
elif [ -f $HOME/env.sh ] ; then 
    source $HOME/env.sh
else
    echo "⚠ File \"env.sh\" is missing!" && exit 0
fi

[ -z "$RUNDIR" ] && echo "⚠ Variable \"RUNDIR\" is not defined!" && exit 0
[ ! -f $RUNDIR/run.sh ] && echo "⚠ File \"run.sh\" is missing!" && exit 0
chmod +x $RUNDIR/run.sh
cd $RUNDIR && $RUNDIR/run.sh

# EOF
