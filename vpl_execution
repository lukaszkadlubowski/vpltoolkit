#!/bin/bash

rm -f $0 # for security issue

### load environment
source vplmodel/bootstrap.sh
model_getenv

### download exo
START=$(date +%s.%N) # in nanoseconds
model_clone $REPOSITORY
model_checkout $EXO
END=$(date +%s.%N)   # in nanoseconds
TIME=$(python -c "print(($END-$START)/1E6")) # in ms
echo "Download $EXO in $TIME ms"

BASEDIR="$HOME/GIT/$EXO"
# echo "BASEDIR=$BASEDIR"

# ### run
[ ! -d "$BASEDIR" ] && echo "⚠ Directory \"$BASEDIR\" missing!" && exit 0
cd $BASEDIR
[ ! -f run.sh ] && echo "⚠ File \"run.sh\" missing!" && exit 0
./run.sh

# EOF
